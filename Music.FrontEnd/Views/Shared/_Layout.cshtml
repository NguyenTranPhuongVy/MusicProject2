    <link href="~/Content/fontawesome-free-5.15.2-web/css/fontawesome.min.css" rel="stylesheet" />
    <script src="~/Content/fontawesome-free-5.15.2-web/js/all.min.js"></script>
    <link href="~/Content/Layout/css/music.css" rel="stylesheet" />
    <link href="~/Content/Layout/css/albums.css" rel="stylesheet" />
