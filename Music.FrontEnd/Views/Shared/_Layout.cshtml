    <style>
        table {
            display: table;
            border-collapse: separate;
            box-sizing: border-box;
            text-indent: initial;
            border-spacing: 2px;
            border-color: none;
        }
    </style>
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Header Section Begin -->
    <header class="header fixed-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="header__logo">
                        <a href="@Url.Action("Index", "Home")"><img src="~/Content/Layout/img/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="header__nav__option">
                        <nav class="header__nav__menu mobile-menu">
                            <ul>
                                <li class="active"><a href="@Url.Action("Index", "Home")">TRANG CHỦ</a></li>
                                <li>
                                    <a href="/Musics/RankMusic?name=100">TOP 100</a>
                                    <ul class="dropdown">
                                        <li><a href="/Musics/RankMusic?name=viet">Nhạc Việt</a></li>
                                        <li><a href="/Musics/RankMusic?name=100">Nhạc Trẻ</a></li>
                                        <li><a href="/Musics/RankMusic?name=kpop">Nhạc K-POP</a></li>
                                        <li><a href="/Musics/RankMusic?name=aumy">Nhạc Âu Mỹ</a></li>
                                    </ul>
                                </li>
                                <li><a href="/Musics/RankMusic?name=all">BẢNG XẾP HẠNG</a></li>
                                <li><a href="@Url.Action("VideoMV", "Videos")">MV</a></li>
                                <li><a href="/View/RadioMusic">Radio Âm Nhạc</a></li>
                                <li><a href="/View/Search">Tìm Kiếm</a></li>
                                <li>
                                    @if (cookie == null)
                                    {
                                        <a href="@Url.Action("Registration", "Users")">TÀI KHOẢN</a>
                                        <ul class="dropdown">
                                            <li><a href="/Users/Login">Đăng Ký / Đăng Nhập</a></li>
                                        </ul>
                                    }
                                    else
                                    {
                                        var user = db.Users.Find(int.Parse(cookie.Value.ToString()));
                                        <a href="#">Chào: @user.user_name</a>
                                        <ul class="dropdown" style="width: 300px">
                                            <li><a href="/Users/Profile"><i class="fa fa-user">&nbsp;</i> Thông tin cá nhân</a></li>
                                            @if (user.user_vip == true)
                                            {
                                                <li><a href="/Musics/Create"><i class="fa fa-music">&nbsp;</i> Đăng nhạc <b class="text-warning float-right">(Vip)</b></a></li>
                                                <li><a href="/Musics/MyMusisc"><i class="fa fa-play">&nbsp;</i> Quản lý âm nhạc của bạn <b class="text-warning float-right">(Vip)</b></a></li>
                                            }
                                            <li><a href="/Albums/MyAlbums"><i class="fa fa-user">&nbsp;</i> Abums của bạn</a></li>
                                            <li><a href="/Quest/Index"><i class="fa fa-question-circle">&nbsp;</i> Danh sách nhiệm vụ</a></li>
                                            <li><a href="/Quest/Redeempoint"><i class="fa fa-gifts">&nbsp;</i> Đổi thưởng</a></li>
                                            <li><a href="/Musics/MyFavouriteMusic"><i class="fa fa-headphones">&nbsp;</i> Quản lý yêu thích nhạc</a></li>
                                            <li><a href="/Pays/History"><i class="fa fa-history">&nbsp;</i> Lịch sử thanh toán</a></li>
                                            <li><a href="/Pays/Index" class="text-danger"><i class="fa fa-caret-square-up">&nbsp;</i> Nâng cấp tài khoản</a></li>
                                            <li><a href="/Users/ResetPassword"><i class="fa fa-key">&nbsp;</i> Đổi mật khẩu</a></li>
                                            <li><a href="/Users/Logoff"><i class="fa fa-sign-out-alt">&nbsp;</i> Đăng xuất</a></li>
                                        </ul>
                                    }
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <div id="mobile-menu-wrap"></div>
        </div>
    </header>
    <!-- Header End -->
    @RenderBody()
    <!-- Footer Section Begin -->
    <footer class="footer">
        <div class="container">
            <div class="footer__top">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="footer__top__logo">
                            <a href="#"><img src="~/Content/Layout/img/logo.png" alt=""></a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="footer__top__social">
                            <a href="#"><i class="fab fa-facebook-f" style="font-size: 18px"></i></a>
                            <a href="#"><i class="fab fa-twitter" style="font-size: 18px"></i></a>
                            <a href="#"><i class="fab fa-dribbble" style="font-size: 18px"></i></a>
                            <a href="#"><i class="fab fa-instagram" style="font-size: 18px"></i></a>
                            <a href="#"><i class="fab fa-youtube" style="font-size: 18px"></i></a>
                        </div>
                    </div>
                </div>
