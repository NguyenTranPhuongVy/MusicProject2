@{
    var a = "@";
}
<script>
    $('.ui.form')
        .form({
            inline: true,
            on: 'blur',
            fields: {
                DisplayName: {
                    identifier: 'DisplayName',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Không Được Phép Để Trống.'
                        },
                        {
                            type: 'maxLength[30]',
                            prompt: 'Tên Người Dùng Không Vượt Quá 30 Kí Tự.'
                        },
                        {
                            type: 'minLength[5]',
                            prompt: 'Tên Người Dùng Trên 5 Kí Tự.'
                        }
                    ]
                },
                Password: {
                    identifier: 'Password',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Không Được Phép Để Trống.'
                        },
                        {
                            type: 'regExp[^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@a#\$%\^&\*])(?=.{8,})]',
                            prompt: 'Mật Khẩu Trên 8 Ký Tự Bao Gồm(Chữ Thường, Chữ Hoa, Ký Tự Đặt Biệt, Số).'
                        }
                    ]
                },
                Email: {
                    identifier: 'Email',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Không Được Phép Để Trống.'
                        },
                        {
                            type: 'email',
                            prompt: 'Email Sai Định Dạng.'
                        }
                    ]
                },
                ConfirmPassword: {
                    identifier: 'ConfirmPassword',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Không Được Phép Để Trống.'
                        },
                        {
                            type: 'match[Password]',
                            prompt: 'Mật Khẩu Sát Nhận Không Trùng Khớp.'
                        }
                    ]
                },

                music_name: {
                    identifier: 'music_name',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Không Được Phép Để Trống.'
                        }
                    ]
                },

                music_lyric: {
                    identifier: 'music_lyric',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Không Được Phép Để Trống.'
                        }
                    ]
                },

                img: {
                    identifier: 'img',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Không Được Phép Để Trống.'
                        }
                    ]
                },

                music_time: {
                    identifier: 'music_time',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Không Được Phép Để Trống.'
                        }
                    ]
                },

                category_id: {
                    identifier: 'category_id',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Không Được Phép Để Trống.'
                        }
                    ]
                },

                nation_id: {
                    identifier: 'nation_id',
                    rules: [
                        {
                            type: 'empty',
                            prompt: 'Không Được Phép Để Trống.'
                        }
                    ]
                },

                terms: {
                    identifier: 'terms',
                    rules: [
                        {
                            type: 'checked',
                            prompt: 'Bạn Chưa Đồng Ý Với Điều Khoản Của Chúng Tôi.'
                        }
                    ]
                },

            }
        })
        ;
</script>
