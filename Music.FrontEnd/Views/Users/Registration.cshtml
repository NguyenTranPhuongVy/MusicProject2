@model Music.FrontEnd.ViewModels.ViewRegister


@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option spad set-bg" data-setbg="../../Content/Layout/img/work/work-7.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-3">
                <div class="breadcrumb__text">
                    <h2>Đăng Ký</h2>
                </div>
            </div>
        </div>
        <div class="container" style="width: 50%">
            <div>
                <center>
                    <button class="ui facebook button">
                        <i class="facebook icon"></i>
                        Facebook
                    </button>
                    <button class="ui twitter button">
                        <i class="twitter icon"></i>
                        Twitter
                    </button>
                    <button class="ui google plus button">
                        <i class="google plus icon"></i>
                        Google Plus
                    </button>
                </center>
            </div>
            <div class="ui horizontal divider text-white">Hoặc</div>
            <form class="ui form segment" action="@Url.Action("Registration", "Users")" method="post">
                @Html.AntiForgeryToken()
                <p>Nhập Thông Tin Của Bạn</p>
                <div class="field">
                    <label>Tên hiển thị</label>
                    <input placeholder="Nhập vào tên đăng nhập" name="DisplayName" type="text">
                </div>
                <div class="field">
                    <label>Email</label>
                    <input placeholder="Nhập vào email" name="Email" type="email">
                </div>
                <div class="field">
                    <p style="font-size: medium; color: red">@ViewBag.Checkemail</p>
                </div>
                <div class="field">
                    <label>Mật Khẩu</label>
                    <input type="password" name="Password" id="user_pass" placeholder="Nhập vào mật khẩu">
                </div>
                <div class="field">
                    <label>Xác Nhận Mật Khẩu</label>
                    <input type="password" name="ConfirmPassword" id="" placeholder="Xác nhận mật khẩu">
                </div>
                <div class="inline field">
                    <div class="ui checkbox">
                        <input type="checkbox" name="terms">
                        <label>Tôi đồng ý với các điều khoản và điều kiện</label>
                    </div>
                </div>
                <div class="field">
                    <label style="color: lightslategray">Bạn đã có tài khoản? Hãy <a href="@Url.Action("Login", "Users")" style="font-size: 13px">đăng nhập</a> ngay</label>
                </div>
                <button class="ui primary submit button">Đăng Ký</button>
                <div class="ui error message"></div>
            </form>
        </div>
    </div>
</div>

