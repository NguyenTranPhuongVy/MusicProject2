
@{
    ViewBag.Title = "ResetPassword";
}

<section class="services spad" ng-app="myApp">
    <div class="container" ng-controller="myCtrl">
        <div class="row" ng-repeat="list in list">
            <div class="col-lg-12">
                <h1 style="font-size: 50px" class="text-white font-weight-bold text-center mt-3">Đổi mật khẩu</h1>
                <div class="">
                    <div id="generic_price_table">
                        <section>
                            <div class="card">
                                <!--BLOCK ROW START-->
                                <div style="padding: 10px">
                                    <form class="ui form">
                                        <div class="field">
                                            <label>Mật khẩu cũ</label>
                                            <input type="text" name="first-name" placeholder="Mật khẩu cũ">
                                        </div>
                                        <div class="field">
                                            <label>Mật khẩu mới</label>
                                            <input type="text" name="first-name" placeholder="Mật khẩu mới">
                                        </div>
                                        <div class="field">
