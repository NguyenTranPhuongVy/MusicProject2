
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-option spad set-bg" data-setbg="../../Content/Layout/img/work/loginimg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center mb-3">
                <div class="breadcrumb__text">
                    <h2>Đăng Nhập</h2>
                </div>
            </div>
        </div>
        <div class="container" style="width: 60%">
            <div>
                <center>
                    <button class="ui facebook button">
                        <i class="facebook icon"></i>
                        Facebook
                    </button>
                    <button class="ui twitter button">
                        <i class="twitter icon"></i>
                        Twitter
                    </button>
                    <button class="ui google plus button">
                        <i class="google plus icon"></i>
                        Google Plus
                    </button>
                </center>
            </div>
            <div class="ui horizontal divider text-white">Hoặc</div>
            <form method="post" action="@Url.Action("Login", "Users")" class="ui form segment">
                <p>Nhập Tài Khoản Của Bạn</p>
                <div class="field">
                    <label>Email</label>
                    <input placeholder="Nhập vào email" name="Email" type="email">
                </div>
                <div class="field">
                    <label>Mật Khẩu</label>
                    <input type="password" name="Password" id="user_pass" placeholder="Nhập vào mật khẩu">
                </div>
                <div class="two fields">
                    <div class="field">
                        <label style="color: lightslategray">Bạn chưa có tài khoản? Hãy <a href="@Url.Action("Registration", "Users")" style="font-size: 13px">tạo tài khoản</a> ngay</label>
                    </div>
                    <div class="inline field text-right">
                        <a href="#" style="font-size: medium">Quên Mật Khẩu?</a>
                    </div>
                </div>
                <button class="ui primary submit button">Đăng Nhập</button>
                <div class="ui error message"></div>
                <div class="field">
                    <label style="color: red; font-size: medium">
                        @ViewBag.CheckLogin
                    </label>
                </div>
            </form>
        </div>
    </div>
</div>
