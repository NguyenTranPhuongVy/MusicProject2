                    <h3>Chọn albums lưu nhạc @Model.music_name</h3>
                    <a href="/Albums/MyAlbums" class="btn btn-danger">Thêm albums</a>
                    <hr />
                    <form action="@Url.Action("AddPlaylistA","PlayList")">
                        @foreach (var item in db.Albums.Where(n => n.user_id == idus.user_id))
                        {
                            <input type="radio" checked value="@item.album_id" name="aid" /> @item.album_name
                        }
                        <input type="hidden" name="mid" value="@Model.music_id" />
                        <br />
                        <br />
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-primary">Lưu nhạc vào</button>
