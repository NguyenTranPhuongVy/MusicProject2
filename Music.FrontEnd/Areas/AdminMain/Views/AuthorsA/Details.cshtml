                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.author_active)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.author_bin)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.author_bin)
                        </dd>

                        <dt>
