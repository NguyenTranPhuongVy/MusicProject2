@model Music.Model.EF.National

@{
    ViewBag.Title = "Thêm quốc gia";
    Layout = "~/Areas/AdminMain/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewBag.Title</h4>
                <a onclick="history.back()" class="btn btn-danger text-white"><i class="fa fa-plus">&nbsp;</i>Trở về</a>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal mt-3 ui form segment">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label>Tên Quốc Gia</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.nation_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nation_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Trạng Thái Hoạt Động</label>
                            <div class="col-md-12">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.nation_active)
                                    @Html.ValidationMessageFor(model => model.nation_active, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Trạng Thái Hiển Thị</label>
                            <div class="col-md-12">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.nation_option)
                                    @Html.ValidationMessageFor(model => model.nation_option, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-12">
                                <input type="submit" value="Tạo" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


