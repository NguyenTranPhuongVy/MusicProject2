@model Music.Model.EF.Package

@{
    ViewBag.Title = "Sừa gói " + Model.package_name;
    Layout = "~/Areas/AdminMain/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewBag.Title</h4>
                <a onclick="history.back()" class="btn btn-danger text-white"><i class="fa fa-plus">&nbsp;</i>Trở về</a>

                @using (Html.BeginForm("Edit", "PackagesA", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal mt-3 ui form segment">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.package_id)
                        <div class="form-group">
                            <label>Tên Gói</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.package_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.package_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Giá Gói</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.package_money, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.package_money, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Nội Dung Gói</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.package_content, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.package_content, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Trạng Thái Hoạt Động</label>
                            <div class="col-md-12">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.package_active)
                                    @Html.ValidationMessageFor(model => model.package_active, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Mệnh Giá</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.pakage_price, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.pakage_price, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Thời Gian</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.pakege_deadline, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.pakege_deadline, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Trạng Thái Hiển Thị</label>
                            <div class="col-md-12">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.package_option)
                                    @Html.ValidationMessageFor(model => model.package_option, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Thời Hạn</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.package_month, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.package_month, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-12">
                                <input type="submit" value="Sửa" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
