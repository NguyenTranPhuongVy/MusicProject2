@model Music.Model.EF.Music

@{
    ViewBag.Title = "Thêm nhạc";
    Layout = "~/Areas/AdminMain/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewBag.Title</h4>
                <a onclick="history.back()" class="btn btn-danger text-white"><i class="fa fa-plus">&nbsp;</i>Trở về</a>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal mt-3 ui form segment">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="field">
                            <label>Tên Bài Hát</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.music_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.music_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Hình Ảnh</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.music_img, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.music_img, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Lời Bài Hát</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.music_lyric, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.music_lyric, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Thời Lượng</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.music_time, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.music_time, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Lượt Nghe</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.music_view, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.music_view, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Lượt Tải</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.music_dowload, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.music_dowload, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Tên Người Tạo</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.user_id, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Link Nhạc</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.music_linkdow, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.music_linkdow, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Ngày Tạo</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.music_datecreate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.music_datecreate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Ngày Sửa</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.music_dateedit, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.music_dateedit, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Trạng Thái Hoạt Động</label>
                            <div class="col-md-12">
                                <select class="ui dropdown" name="music_active">
                                    <option value="true">Hoạt Động</option>
                                    <option value="false">Không Hoạt Động</option>
                                </select>
                            </div>
                        </div>

                        <div class="field">
                            <label>Trạng Thái Hiển Thị</label>
                            <div class="col-md-12">
                                <select class="ui dropdown" name="music_option">
                                    <option value="true">Hoạt Động</option>
                                    <option value="false">Không Hoạt Động</option>
                                </select>
                            </div>
                        </div>

                        <div class="field">
                            <label>Quốc Gia</label>
                            <div class="col-md-12">
                                @Html.DropDownList("nation_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.nation_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Link MV (Nếu có)</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.music_video, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.music_video, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Phân Loại Âm Nhạc</label>
                            <div class="col-md-12">
                                @Html.DropDownList("genres_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.genres_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Chọn Nhạc Sĩ</label>
                            <div class="col-md-12">
                                @Html.DropDownList("author_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.author_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <label>Chọn Album</label>
                            <div class="col-md-12">
                                @Html.DropDownList("album_id", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.album_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="field">
                            <div class="col-md-offset-2 col-md-12">
                                <input type="submit" value="Thêm" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

