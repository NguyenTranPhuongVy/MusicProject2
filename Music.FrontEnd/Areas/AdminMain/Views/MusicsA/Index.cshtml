@model IEnumerable<Music.Model.EF.Music>
@{
    
    ViewBag.Title = "Quản lý nhạc";
    Layout = "~/Areas/AdminMain/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewBag.Title</h4>
                <a href="/AdminMain/MusicsA/Create" class="btn btn-danger"><i class="fa fa-plus">&nbsp;</i>Thêm nhạc</a>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered zero-configuration">
                        <thead>
                            <tr>
                                <th>Mã nhạc</th>
                                <th>Ảnh</th>
                                <th>Tên nhạc</th>
                                <th>Thời gian</th>
                                <th>Lượt xem</th>
                                <th>Lượt tải</th>
                                <th>Người đăng</th>
                                <th>Quốc gia</th>
                                <th>Nhạc sỹ</th>
                                <th>Thể loại</th>
                                <th>Album</th>
                                <th>Tình trạng</th>
                                <th>Hoạt động</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.music_id</td>
                                    <td>
                                        <img src="~/Images/Music/@item.music_img" style="width: 50px; height: 50px" />
                                    </td>
                                    <td>@item.music_name</td>
                                    <td>@item.music_time</td>
                                    <td>@item.music_view</td>
                                    <td>@item.music_dowload</td>
                                    <td>@item.User.user_name</td>
                                    <td>@item.National.nation_name</td>
                                    <td>@item.Author.author_name</td>
                                    <td>@item.Genre.genres_name</td>
                                    <td>@item.Album.album_name</td>
                                    <td>@item.music_option</td>
                                    <td>@item.music_active</td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.music_id }) |
                                        @Html.ActionLink("Xem", "Details", new { id = item.music_id }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.music_id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Mã nhạc</th>
                                <th>Ảnh</th>
                                <th>Tên nhạc</th>
                                <th>Thời gian</th>
                                <th>Lượt xem</th>
                                <th>Lượt tải</th>
                                <th>Người đăng</th>
                                <th>Quốc gia</th>
                                <th>Nhạc sỹ</th>
                                <th>Thể loại</th>
                                <th>Album</th>
                                <th>Tình trạng</th>
                                <th>Hoạt động</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
