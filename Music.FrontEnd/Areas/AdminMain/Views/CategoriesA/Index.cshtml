@model IEnumerable<Music.Model.EF.Category>

@{
    ViewBag.Title = "Quản lý danh mục";
    Layout = "~/Areas/AdminMain/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewBag.Title</h4>
                <a href="/AdminMain/CategoriesA/Create" class="btn btn-danger"><i class="fa fa-plus">&nbsp;</i>Thêm danh mục</a>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered zero-configuration">
                        <thead>
                            <tr>
                                <th>Mã danh mục</th>
                                <th>Ảnh</th>
                                <th>Tên danh mục</th>
                                <th>Ngày tạo</th>
                                <th>Ngày sửa</th>
                                <th>Lượt xem</th>
                                <th>Hoạt động</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.category_id</td>
                                    
                                    <td>
                                        <img src="~/Images/Category/@item.category_img" style="width: 50px; height: 50px" />
                                    </td>
                                    <td>@item.category_name</td>
                                    <td>@item.category_datecreate</td>
                                    <td>@item.category_dateupdate</td>
                                    <td>@item.category_view</td>
                                    <td>@item.category_active</td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.category_id }) |
                                        @Html.ActionLink("Xem", "Details", new { id = item.category_id }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.category_id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Mã danh mục</th>
                                <th>Tên danh mục</th>
                                <th>Ngày tạo</th>
                                <th>Ngày sửa</th>
                                <th>Lượt xem</th>
                                <th>Hoạt động</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
