@model IEnumerable<Music.Model.EF.Pay>

@{
    ViewBag.Title = "Quản lý hóa đơn";
    Layout = "~/Areas/AdminMain/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewBag.Title</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered zero-configuration">
                        <thead>
                            <tr>
                                <th>Mã hóa đơn</th>
                                <th>Ảnh đại diện</th>
                                <th>Người thanh toán</th>
                                <th>Gói thanh toán</th>
                                <th>Ngày thanh toán</th>
                                <th>Tổng thanh toán</th>
                                <th>Tình trạng</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.pay_id</td>
                                    <td>
                                        <img src="~/Images/User/@item.User.user_img" style="width: 50px; height: 50px" />
                                    </td>
                                    <td>@item.User.user_email</td>
                                    <td>@item.Package.package_name (@item.Package.package_money)</td>
                                    <td>@item.pay_datecreate</td>
                                    <td>@item.pay_summoney</td>
                                    <td>@item.pay_status</td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.pay_id }) |
                                        @Html.ActionLink("Xem", "Details", new { id = item.pay_id }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.pay_id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Mã hóa đơn</th>
                                <th>Ảnh đại diện</th>
                                <th>Người thanh toán</th>
                                <th>Gói thanh toán</th>
                                <th>Ngày thanh toán</th>
                                <th>Tổng thanh toán</th>
                                <th>Tình trạng</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
